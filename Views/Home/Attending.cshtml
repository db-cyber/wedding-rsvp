<form asp-action="Index" asp-controller="Home">
	<body>
		<div class="vh-100 d-flex justify-content-center align-items-center">
			<div class="col-md-6 col-sm-6">
				<div class="border border-3 border-success"></div>
				<div class="card bg-white shadow p-5">
					<div class="mb-6 text-center">
						<i class="fa-regular fa-face-laugh-beam fa-bounce" style="font-size:120px; color: #6cc070;"></i>
					</div>
					<br />
					<div class="text-center">
						<h1> We are so happy you can come! </h1>
						<br />
						<p> To RSVP for another person please hit the button below: </p>
						<br />
						<button class="btn btn-outline-success col-md-6 button col-sm-6">Return</button>
					</div>
				</div>
			</div>
		</div>
	</body>
</form>